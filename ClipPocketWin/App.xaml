<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ClipPocketWin.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClipPocketWin"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="AppleLikeFontFamily">ms-appx:///Assets/Fonts/Inter/Inter-VariableFont_opsz%2Cwght.ttf#Inter</FontFamily>
            <SolidColorBrush x:Key="ToggleSwitchFillOn" Color="#FF0A84FF" />
            <SolidColorBrush x:Key="ToggleSwitchFillOff" Color="#FF3A3F44" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOn" Color="#FF0A84FF" />
            <SolidColorBrush x:Key="ToggleSwitchStrokeOff" Color="#66313639" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOn" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFillOff" Color="#FFFFFFFF" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
