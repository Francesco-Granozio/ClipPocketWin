<Window
    x:Class="ClipPocketWin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ClipPocket">

    <Grid Background="Transparent">
        <Grid.Resources>
            <Style x:Key="GlassChipButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#22FFFFFF" />
                <Setter Property="BorderBrush" Value="#22FFFFFF" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12,6" />
                <Setter Property="Foreground" Value="#AAFFFFFF" />
                <Setter Property="FontFamily" Value="{StaticResource AppleLikeFontFamily}" />
                <Setter Property="FontSize" Value="12" />
            </Style>
            <Style x:Key="GlassIconChipButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassChipButtonStyle}">
                <Setter Property="Width" Value="32" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Background" Value="#11FFFFFF" />
                <Setter Property="BorderBrush" Value="#22FFFFFF" />
            </Style>
        </Grid.Resources>

        <Grid Margin="20,16,20,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Padding="12,0"
                    Background="#22FFFFFF"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe Fluent Icons"
                            FontSize="16"
                            Foreground="#99FFFFFF"
                            Glyph="&#xE721;" />
                        <TextBox
                            x:Name="SearchTextBox"
                            Grid.Column="1"
                            Height="30"
                            VerticalAlignment="Center"
                            PlaceholderText="Search clipboard..."
                            TextChanged="SearchTextBox_TextChanged"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Foreground="#F0FFFFFF"
                            FontFamily="{StaticResource AppleLikeFontFamily}">
                            <TextBox.Resources>
                                <SolidColorBrush x:Key="TextControlBorderBrush" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackground" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent" />
                                <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="6"
                    Margin="10,0,0,0">
                    <Button
                        x:Name="PinnedTabButton"
                        Style="{StaticResource GlassChipButtonStyle}"
                        Click="SectionButton_Click"
                        Tag="Pinned">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE718;" />
                            <TextBlock x:Name="PinnedTabLabel" Text="Pinned (0)" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="RecentTabButton"
                        Style="{StaticResource GlassChipButtonStyle}"
                        Click="SectionButton_Click"
                        Tag="Recent">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE823;" />
                            <TextBlock x:Name="RecentTabLabel" Text="Recent (0)" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="HistoryTabButton"
                        Style="{StaticResource GlassChipButtonStyle}"
                        Click="SectionButton_Click"
                        Tag="History">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE81C;" />
                            <TextBlock x:Name="HistoryTabLabel" Text="History (0)" />
                        </StackPanel>
                    </Button>
                    <Button
                        Style="{StaticResource GlassIconChipButtonStyle}"
                        Margin="4,0,0,0"
                        Click="SettingsButton_Click"
                        ToolTipService.ToolTip="Settings">
                        <FontIcon FontFamily="Segoe Fluent Icons" FontSize="14" Foreground="#88FFFFFF" Glyph="&#xE713;" />
                    </Button>
                    <Button
                        Style="{StaticResource GlassIconChipButtonStyle}"
                        Click="ClosePanelButton_Click"
                        ToolTipService.ToolTip="Close">
                        <FontIcon FontFamily="Segoe Fluent Icons" FontSize="14" Foreground="#88FFFFFF" Glyph="&#xE711;" />
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer
                Grid.Row="1"
                Margin="0,0,0,14"
                HorizontalScrollBarVisibility="Hidden"
                HorizontalScrollMode="Enabled"
                VerticalScrollMode="Disabled"
                VerticalScrollBarVisibility="Disabled"
                ZoomMode="Disabled">

                <StackPanel
                    x:Name="TypeFilterButtonsPanel"
                    Orientation="Horizontal"
                    Spacing="6">
                        <Button x:Name="AllFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="All" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE8A9;" />
                                <TextBlock Text="All" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="TextFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Text" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE8A4;" />
                                <TextBlock Text="Text" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="RichTextFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="RichText" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE8D2;" />
                                <TextBlock Text="Rich Text" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="CodeFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Code" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE943;" />
                                <TextBlock Text="Code" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="UrlFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Url" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE71B;" />
                                <TextBlock Text="URL" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="EmailFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Email" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE715;" />
                                <TextBlock Text="Email" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="ImageFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Image" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xEB9F;" />
                                <TextBlock Text="Image" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="FileFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="File" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE7C3;" />
                                <TextBlock Text="File" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="ColorFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Color" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE790;" />
                                <TextBlock Text="Color" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="JsonFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Json" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE9D5;" />
                                <TextBlock Text="JSON" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="PhoneFilterButton" Style="{StaticResource GlassChipButtonStyle}" Tag="Phone" Click="TypeFilterButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon FontFamily="Segoe Fluent Icons" FontSize="12" Glyph="&#xE717;" />
                                <TextBlock Text="Phone" />
                            </StackPanel>
                        </Button>
                </StackPanel>

            </ScrollViewer>

            <Grid Grid.Row="2">
                <ListView
                    x:Name="ClipboardItemsListView"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    IsItemClickEnabled="False"
                    Padding="6,6,6,6"
                    ScrollViewer.HorizontalScrollMode="Enabled"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollMode="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    SelectionMode="None"
                    Visibility="Collapsed">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="220"
                                Height="220"
                                Margin="0,0,10,0"
                                Background="{Binding CardBackgroundBrush}"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1"
                                CanDrag="True"
                                CornerRadius="14"
                                Padding="0"
                                DoubleTapped="ClipboardCard_DoubleTapped"
                                DragStarting="ClipboardCard_DragStarting"
                                PointerEntered="Card_PointerEntered"
                                PointerExited="Card_PointerExited"
                                RenderTransformOrigin="0.5,0.5"
                                RightTapped="ClipboardCard_RightTapped"
                                Tag="{Binding Id}">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </Border.RenderTransform>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Grid.Row="0"
                                        Background="{Binding HeaderBackgroundBrush}"
                                        CornerRadius="14,14,0,0"
                                        Padding="12,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Grid.Column="0"
                                                Width="34"
                                                Height="34"
                                                Margin="0,0,10,0"
                                                Background="{Binding IconBackgroundBrush}"
                                                CornerRadius="8">
                                                <Grid>
                                                    <Image
                                                        Width="24"
                                                        Height="24"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Source="{Binding SourceAppIcon}"
                                                        Visibility="{Binding SourceIconVisibility}" />
                                                    <FontIcon
                                                        FontFamily="Segoe Fluent Icons"
                                                        FontSize="16"
                                                        Foreground="{Binding IconForegroundBrush}"
                                                        Glyph="{Binding IconGlyph}"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding SourceIconFallbackVisibility}" />
                                                </Grid>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock
                                                    FontFamily="{StaticResource AppleLikeFontFamily}"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="White"
                                                    Text="{Binding TypeLabel}" />
                                                <TextBlock
                                                    FontFamily="{StaticResource AppleLikeFontFamily}"
                                                    FontSize="11"
                                                    Foreground="#99FFFFFF"
                                                    Text="{Binding TimestampLabel}" />
                                            </StackPanel>
                                            <TextBlock
                                                Grid.Column="2"
                                                FontFamily="{StaticResource AppleLikeFontFamily}"
                                                FontSize="10"
                                                Foreground="#BFFFE08A"
                                                Text="{Binding PinLabel}"
                                                VerticalAlignment="Top" />
                                        </Grid>
                                    </Border>
                                    <Border
                                        Grid.Row="1"
                                        Background="{Binding BodyBackgroundBrush}"
                                        CornerRadius="0,0,14,14"
                                        Padding="12,10">
                                        <Grid>
                                            <Border
                                                CornerRadius="8"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Visibility="{Binding ImagePreviewVisibility}">
                                                <Image
                                                    Source="{Binding PreviewImage}"
                                                    Stretch="Uniform" />
                                            </Border>
                                            <Grid Visibility="{Binding ColorPreviewVisibility}">
                                                <TextBlock
                                                    FontFamily="{StaticResource AppleLikeFontFamily}"
                                                    FontSize="30"
                                                    FontWeight="Bold"
                                                    Foreground="{Binding ColorPreviewForegroundBrush}"
                                                    HorizontalAlignment="Center"
                                                    Text="{Binding ColorPreviewText}"
                                                    TextAlignment="Center"
                                                    TextTrimming="CharacterEllipsis"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                            <StackPanel
                                                Spacing="6"
                                                VerticalAlignment="Top"
                                                Visibility="{Binding FilePreviewVisibility}">
                                                <Grid>
                                                    <Image
                                                        Width="42"
                                                        Height="42"
                                                        HorizontalAlignment="Left"
                                                        Source="{Binding FileIcon}"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding FileIconVisibility}" />
                                                    <FontIcon
                                                        FontFamily="Segoe Fluent Icons"
                                                        FontSize="36"
                                                        Foreground="#FFE4EAF8"
                                                        Glyph="{Binding FileGlyph}"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding FileGlyphVisibility}" />
                                                </Grid>
                                                <TextBlock
                                                    FontFamily="{StaticResource AppleLikeFontFamily}"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="#FFF5F8FF"
                                                    Text="{Binding FileName}" />
                                                <TextBlock
                                                    FontFamily="{StaticResource AppleLikeFontFamily}"
                                                    FontSize="11"
                                                    Foreground="#C8D7E8FF"
                                                    MaxLines="2"
                                                    Text="{Binding FilePath}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    FontFamily="{StaticResource AppleLikeFontFamily}"
                                                    FontSize="11"
                                                    Foreground="#BFD2E4FF"
                                                    Text="{Binding FileSize}" />
                                            </StackPanel>
                                            <RichTextBlock
                                                FontFamily="Consolas"
                                                FontSize="12"
                                                Foreground="#FFDDE7FF"
                                                IsTextSelectionEnabled="False"
                                                DataContextChanged="CodePreview_DataContextChanged"
                                                Loaded="CodePreview_Loaded"
                                                MaxHeight="142"
                                                TextWrapping="WrapWholeWords"
                                                Visibility="{Binding CodePreviewVisibility}" />
                                            <TextBlock
                                                FontFamily="{StaticResource AppleLikeFontFamily}"
                                                FontSize="12"
                                                Foreground="#CCF1F6FF"
                                                MaxLines="8"
                                                Text="{Binding PreviewText}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap"
                                                Visibility="{Binding TextPreviewVisibility}" />
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border
                    x:Name="EmptyStateContainer"
                    Padding="18,16"
                    Background="#14000000"
                    BorderBrush="#33FFFFFF"
                    BorderThickness="1"
                    CornerRadius="14"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Visibility="Collapsed">
                    <StackPanel Width="220" Spacing="8" HorizontalAlignment="Center">
                        <FontIcon
                            x:Name="EmptyStateIcon"
                            FontFamily="Segoe Fluent Icons"
                            FontSize="50"
                            Foreground="#8CD6E6FF"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            x:Name="EmptyStateTitle"
                            FontFamily="{StaticResource AppleLikeFontFamily}"
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="#E6FFFFFF"
                            HorizontalAlignment="Center"
                            TextAlignment="Center" />
                        <TextBlock
                            x:Name="EmptyStateSubtitle"
                            FontFamily="{StaticResource AppleLikeFontFamily}"
                            FontSize="12"
                            Foreground="#A6FFFFFF"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
